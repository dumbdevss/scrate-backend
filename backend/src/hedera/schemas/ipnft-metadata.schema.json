{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IP-NFT Metadata Schema",
  "type": "object",
  "required": ["schema_version", "name", "description", "properties"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["1.0.0"]
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000
    },
    "image": {
      "type": "string",
      "format": "uri"
    },
    "external_url": {
      "type": "string",
      "format": "uri"
    },
    "properties": {
      "type": "object",
      "required": ["type", "agreements", "project_details"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["IP-NFT"]
        },
        "agreements": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["type", "url", "mime_type", "content_hash"],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "License Agreement",
                  "Patent Assignment", 
                  "Copyright Transfer",
                  "Trade Secret Agreement",
                  "Research Agreement",
                  "Collaboration Agreement"
                ]
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "mime_type": {
                "type": "string",
                "enum": ["application/pdf", "application/msword", "text/plain"]
              },
              "content_hash": {
                "type": "string",
                "pattern": "^[a-z0-9]{59}$"
              },
              "encryption": {
                "type": "object",
                "properties": {
                  "protocol": {
                    "type": "string",
                    "enum": ["lit", "custom"]
                  },
                  "encrypted_sym_key": {
                    "type": "string"
                  },
                  "access_control_conditions": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          }
        },
        "project_details": {
          "type": "object",
          "required": ["industry", "organization", "topic"],
          "properties": {
            "industry": {
              "type": "string",
              "enum": [
                "Pharmaceutical R&D",
                "Biotechnology",
                "Medical Devices",
                "Software Technology",
                "Hardware Technology",
                "Clean Energy",
                "Materials Science",
                "Artificial Intelligence",
                "Blockchain Technology",
                "Other"
              ]
            },
            "organization": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            },
            "topic": {
              "type": "string",
              "minLength": 1,
              "maxLength": 100
            },
            "research_lead": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 100
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "orcid": {
                  "type": "string",
                  "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}[\\dX]$"
                }
              }
            },
            "funding_sources": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "grant_number": {
                    "type": "string"
                  },
                  "amount": {
                    "type": "number",
                    "minimum": 0
                  }
                }
              }
            },
            "publication_date": {
              "type": "string",
              "format": "date"
            },
            "patent_numbers": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "related_publications": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "doi": {
                    "type": "string"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            }
          }
        },
        "hedera_metadata": {
          "type": "object",
          "properties": {
            "token_id": {
              "type": "string"
            },
            "token_address": {
              "type": "string"
            },
            "minted_at": {
              "type": "string",
              "format": "date-time"
            },
            "minter_account": {
              "type": "string"
            },
            "network": {
              "type": "string",
              "enum": ["mainnet", "testnet", "previewnet"]
            }
          }
        }
      }
    }
  }
}
